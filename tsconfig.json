{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./src/@types",
            "./@types",
            "./node_modules/@types"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}